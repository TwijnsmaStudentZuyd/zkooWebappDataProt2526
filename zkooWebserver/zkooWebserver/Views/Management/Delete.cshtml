@using zkooWebserver.ViewModels.Appointments
@model DeleteViewModel;

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Doctor)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Date)
        </dd>
    </dl>

    <form method="post">
        <div class="mb-3">
            <input type="hidden" asp-for="Appointment.AppointmentId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-black mt-3">
                Back to list
            </a>
        </div>
    </form>
</div>